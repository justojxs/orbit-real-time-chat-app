{
    "name": "orbit-chat-app",
    "version": "1.0.0",
    "scripts": {
        "server": "cd server && npm run dev",
        "client": "cd client && npm run dev",
        "build": "cd client && npm run build && cd ../server && npm install",
        "start": "concurrently \"npm run server\" \"npm run client\"",
        "dev": "npm start"
    },
    "devDependencies": {
        "concurrently": "^8.2.1"
    }
}